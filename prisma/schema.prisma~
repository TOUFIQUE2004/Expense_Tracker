datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Prisma Accelerate for runtime
  directUrl = env("DIRECT_URL")   // Direct Postgres for CLI commands
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid())
  clerkUserId  String        @unique
  email        String        @unique
  name         String?
  imageUrl     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  text      String
  amount    Float
  userId    String
  // Either keep this pointing to clerkUserId or switch to id if that's your PK
  user      User     @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
